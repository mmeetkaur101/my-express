table
  thead
    tr
      th First Name
      th Last Name
      th Email
      th Actions
  tbody
    each student in students
      tr
        td= student.firstName
        td= student.lastName
        td= student.email
        td
          a(href=`/students/${student._id}/edit`) Edit
          form(action=`/students/${student._id}?_method=DELETE` method="post")
            button(type="submit") Delete
  a(href="/students/new") Add New Student